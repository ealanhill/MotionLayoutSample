<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end">
        <OnSwipe
            app:touchAnchorId="@id/toolbar_background_collapsible"
            app:touchAnchorSide="bottom"
            app:dragDirection="dragUp"/>
    </Transition>

    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@id/toolbar_background_collapsible"
            android:layout_width="0dp"
            android:layout_height="250dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tab_layout_collapsible"/>
        <Constraint
            android:id="@id/image_collapsible"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/toolbar_background_collapsible"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_background_collapsible"/>
        <Constraint
            android:id="@id/title_collapsible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/image_collapsible"
            app:layout_constraintBottom_toTopOf="@id/subtitle_collapsible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@id/subtitle_collapsible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            app:layout_constraintTop_toBottomOf="@id/title_collapsible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end">
        <Constraint
            android:id="@id/toolbar_background_collapsible"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tab_layout_collapsible"/>
        <Constraint
            android:id="@id/image_collapsible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="@id/toolbar_background_collapsible"
            app:layout_constraintEnd_toEndOf="@id/toolbar_background_collapsible"
            app:layout_constraintTop_toTopOf="@id/toolbar_background_collapsible"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_background_collapsible"/>
        <Constraint
            android:id="@id/title_collapsible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/image_collapsible"
            app:layout_constraintBottom_toTopOf="@id/subtitle_collapsible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@id/subtitle_collapsible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@id/title_collapsible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </ConstraintSet>

</MotionScene>